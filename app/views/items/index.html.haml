.top
  = render "shared/header"

.main
  = render "shared/side_bar"
  .contents
    .contents_top
      .list
        Item list
    .contents_main
      .contents_main_box
        .contents_main_box__list
          - @items.each do |item|
            .contents_main_box__list__frame
              = link_to "/items/#{item.id}", method: :get do
                .contents_main_box__list__post{style:"background-image: url(#{item.image});"}

                .contents_main_box__list__text
                  .text
                    Item name :
                  .item_name
                    = item.name
                .price
                  Price
                  .price_in
                    Â¥
                    = item.price.to_s(:delimited)
.contents_low
  .info
    information
  .icon
    = fa_icon 'facebook', class: 'icon'
    = fa_icon 'twitter', class: 'icon'
    = fa_icon 'google', class: 'icon'
    = fa_icon 'pinterest', class: 'icon'